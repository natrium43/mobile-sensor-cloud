//- View: Dashboard layout

extends layout

block styles
    link(rel='stylesheet', href='/stylesheets/dashboard.css')

block scripts
    script(src='/javascripts/dashboard.js')
        
block content
    #wrapper.container-fluid
        //- load dashboard view based on the account type: user, admin or owner
        - if (response.session.account === 'owners')
            include _dashboard_owner
        - else if (response.session.account === 'admins')
            include _dashboard_admin
        - else if (response.session.account === 'users')
            include _dashboard_user
        
