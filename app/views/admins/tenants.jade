extends _main

block right_pane
    .container-fluid
        button.btn.btn-primary.pull-right(id='create-tenant', title='Create new tenant')
            i.fa.fa-plus
            | &nbsp;New Tenant
    br
    - var tenants = render.response;
    - for (var i = 0; i < tenants.length; i++)
        .col-lg-4.col-md-6
            .panel.panel-default
                .panel-heading.clearfix
                    .pull-left
                        - var tenant = tenants[i];
                        a.manage-tenant(href='javascript:void(0);', data-tenant-id="#{tenant.tenant_id}", data-tenant="#{tenant.tenant}")
                            span.label.label-default(style='font-size: 1em;')
                                = tenant.tenant
                    //- .pull-right
                    //-     button.btn.btn-danger.btn-xs(title='Delete tenant', data-tenant-id="#{tenant.tenant_id}")
                    //-         i.fa.fa-trash
                    //-         span.hidden-xs
                    //-             | &nbsp;Delete
                .panel-body
                    .row
                        .col-xs-6
                            strong
                                | Tenant Name:
                        .col-xs-6
                            = tenant.tenant
                    .row
                        .col-xs-6
                            strong
                                | # of Users:
                        .col-xs-6
                            = tenant.users
                    .row
                        .col-xs-6
                            strong
                                | # of Subscriptions:
                        .col-xs-6
                            = tenant.subscriptions